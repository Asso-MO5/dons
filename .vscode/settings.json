{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "prettier.printWidth": 100,
  "prettier.tabWidth": 2,
  "prettier.semi": false,
  "[javascript]": {
    "editor.tabSize": 2
  },
  "[html]": {
    "editor.tabSize": 2
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "cSpell.words": [
    "mithril",
    "onbeforeupdate",
    "oncreate",
    "oninit",
    "postgres",
    "qrcode",
    "vnode"
    // Ajoutez d'autres mots ici
  ]
}
